<!-- Modern Minimalist Hero Section -->
<section class="relative min-h-screen flex items-center">
  <!-- Subtle gradient mesh background -->
  <div class="absolute inset-0 bg-gradient-to-br from-background via-background to-background">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--color-primary)_0%,_transparent_50%)] opacity-[0.03]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--color-accent)_0%,_transparent_50%)] opacity-[0.03]"></div>
  </div>
  
  <div class="relative z-10 w-full">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-x-8 lg:items-center">
        <!-- Text Content -->
        <div class="lg:col-span-6">
          <!-- New Badge with pulse -->
          <div class="inline-flex items-center mb-8">
            <span class="relative inline-flex rounded-full bg-primary/10 px-3 py-1 text-xs font-medium text-primary ring-1 ring-inset ring-primary/20">
              <span class="absolute -top-px -left-px flex h-full w-full">
                <span class="animate-ping relative inline-flex h-full w-full rounded-full bg-primary opacity-20"></span>
              </span>
              <span class="relative">NEW</span>
            </span>
            <span class="ml-3 text-sm text-muted-foreground">AI 기반 작업 자동화 출시</span>
          </div>
          
          <!-- Main Heading with variable font -->
          <h1 class="text-6xl lg:text-7xl font-bold tracking-tight">
            <span class="block text-foreground">일하는 방식을</span>
            <span class="block mt-2">
              <span class="relative">
                <span class="relative z-10 bg-gradient-to-r from-primary via-accent to-primary bg-clip-text text-transparent animate-gradient">
                  혁신하다
                </span>
                <span class="absolute -bottom-2 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary to-transparent"></span>
              </span>
            </span>
          </h1>
          
          <p class="mt-6 text-lg lg:text-xl text-muted-foreground leading-relaxed max-w-xl">
            AI가 당신의 워크플로우를 이해하고 최적화합니다. 
            단순 작업은 자동화하고, 창의적 업무에 집중하세요.
          </p>
          
          <!-- CTA Buttons with modern styling -->
          <div class="mt-10 flex flex-wrap gap-4">
            <%= link_to AppRoutes::Auth.register_url,
                class: "group relative inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-foreground bg-primary rounded-2xl transition-all duration-200 hover:shadow-[0_20px_40px_-15px_rgba(var(--color-primary-rgb),0.5)] hover:-translate-y-0.5",
                data: { turbo: false } do %>
              <span>무료 시작</span>
              <svg class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
            
            <button class="group relative inline-flex items-center justify-center px-8 py-4 text-base font-medium text-foreground bg-background border border-border rounded-2xl transition-all duration-200 hover:border-primary/50 hover:shadow-lg">
              <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-primary/0 via-primary/5 to-primary/0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></span>
              <svg class="mr-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="relative">3분 데모</span>
            </button>
          </div>
          
          <!-- Social Proof -->
          <div class="mt-12 pt-8 border-t border-border/50">
            <div class="flex items-center gap-8">
              <div class="flex -space-x-2">
                <% 5.times do |i| %>
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-accent ring-2 ring-background"></div>
                <% end %>
              </div>
              <div>
                <div class="flex items-center gap-1 mb-1">
                  <% 5.times do %>
                    <svg class="w-4 h-4 text-warning fill-current" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                </div>
                <p class="text-sm text-muted-foreground">10,000+ 팀이 사용 중</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Visual Element -->
        <div class="hidden lg:block lg:col-span-6 lg:relative">
          <div class="relative mx-auto w-full max-w-lg">
            <!-- Floating cards animation -->
            <div class="absolute top-0 -right-4 w-72 h-40 bg-gradient-to-br from-primary/20 to-accent/20 rounded-3xl blur-2xl animate-float"></div>
            <div class="absolute -bottom-8 -left-4 w-72 h-40 bg-gradient-to-tr from-accent/20 to-success/20 rounded-3xl blur-2xl animate-float-delayed"></div>
            
            <!-- Main visual card -->
            <div class="relative bg-card/80 backdrop-blur-xl border border-border/50 rounded-3xl p-8 shadow-2xl">
              <div class="space-y-4">
                <div class="h-3 bg-gradient-to-r from-primary/20 to-primary/10 rounded-full w-3/4"></div>
                <div class="h-3 bg-gradient-to-r from-accent/20 to-accent/10 rounded-full w-full"></div>
                <div class="h-3 bg-gradient-to-r from-success/20 to-success/10 rounded-full w-5/6"></div>
              </div>
              
              <div class="mt-8 grid grid-cols-3 gap-4">
                <div class="h-20 bg-gradient-to-br from-primary/10 to-primary/5 rounded-xl animate-pulse"></div>
                <div class="h-20 bg-gradient-to-br from-accent/10 to-accent/5 rounded-xl animate-pulse animation-delay-200"></div>
                <div class="h-20 bg-gradient-to-br from-success/10 to-success/5 rounded-xl animate-pulse animation-delay-400"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

