<!-- Pricing Section - Simple & Clear -->
<section class="py-24">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-foreground">
        투명한 요금제
      </h2>
      <p class="mt-4 text-lg text-muted-foreground">
        팀 규모에 맞는 플랜을 선택하세요. 언제든 변경 가능합니다.
      </p>
    </div>
    
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      <% [
        { name: "Starter", price: "0", desc: "개인과 소규모 팀", features: ["사용자 5명", "프로젝트 10개", "5GB 저장공간", "기본 자동화"] },
        { name: "Team", price: "29,000", desc: "성장하는 팀", features: ["사용자 무제한", "프로젝트 무제한", "100GB 저장공간", "고급 자동화", "우선 지원"], popular: true },
        { name: "Enterprise", price: "문의", desc: "대규모 조직", features: ["모든 Team 기능", "무제한 저장공간", "전담 매니저", "맞춤 교육", "SLA 보장"] }
      ].each do |plan| %>
        <div class="relative <%= 'ring-2 ring-primary' if plan[:popular] %> bg-card rounded-3xl p-8 <%= 'shadow-xl scale-105 z-10' if plan[:popular] %>">
          <% if plan[:popular] %>
            <span class="absolute -top-4 left-1/2 -translate-x-1/2 inline-flex items-center rounded-full bg-primary px-4 py-1 text-xs font-semibold text-primary-foreground">
              POPULAR
            </span>
          <% end %>
          
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-foreground"><%= plan[:name] %></h3>
            <p class="mt-2 text-sm text-muted-foreground"><%= plan[:desc] %></p>
            <p class="mt-6">
              <span class="text-4xl font-bold text-foreground">₩<%= plan[:price] %></span>
              <% unless plan[:price] == "문의" %>
                <span class="text-muted-foreground">/월</span>
              <% end %>
            </p>
          </div>
          
          <ul class="space-y-3 mb-8">
            <% plan[:features].each do |feature| %>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted-foreground"><%= feature %></span>
              </li>
            <% end %>
          </ul>
          
          <button class="w-full py-3 px-6 text-sm font-medium <%= plan[:popular] ? 'bg-primary text-primary-foreground' : 'bg-background border border-border text-foreground hover:bg-muted' %> rounded-xl transition-colors">
            <%= plan[:price] == "문의" ? "영업팀 문의" : "시작하기" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</section>

