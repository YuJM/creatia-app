<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-2">Total Organizations</h2>
      <p class="text-3xl font-bold text-blue-600"><%= @organizations_count %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-2">Total Users</h2>
      <p class="text-3xl font-bold text-green-600"><%= @users_count %></p>
    </div>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Recent Organizations</h2>
      <ul class="space-y-2">
        <% @recent_organizations.each do |org| %>
          <li class="flex justify-between items-center py-2 border-b">
            <span><%= org.name %></span>
            <span class="text-sm text-gray-500"><%= org.created_at.strftime("%Y-%m-%d") %></span>
          </li>
        <% end %>
      </ul>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Recent Users</h2>
      <ul class="space-y-2">
        <% @recent_users.each do |user| %>
          <li class="flex justify-between items-center py-2 border-b">
            <span><%= user.email %></span>
            <span class="text-sm text-gray-500"><%= user.created_at.strftime("%Y-%m-%d") %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>