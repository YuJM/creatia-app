<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Edit Organization Settings</h1>
  
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: [@organization], url: settings_organization_path, local: true do |form| %>
      <% if @organization.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded p-4 mb-6">
          <h2 class="text-red-800 font-semibold mb-2">Please fix the following errors:</h2>
          <ul class="text-red-600 list-disc list-inside">
            <% @organization.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :website, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :website, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :logo_url, "Logo URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :logo_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="flex space-x-4 mt-6">
        <%= form.submit "Update Settings", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        <%= link_to "Cancel", settings_organization_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
      </div>
    <% end %>
  </div>
</div>