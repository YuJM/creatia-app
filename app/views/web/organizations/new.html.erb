<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold mb-8">New Organization</h1>

  <%= form_with(model: @organization, local: true) do |form| %>
    <% if @organization.errors.any? %>
      <%= render AlertComponent.new(type: :error, title: "Please fix the following errors:") do %>
        <ul class="list-disc list-inside">
          <% @organization.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="mb-6">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter organization name" %>
      </div>

      <div class="mb-6">
        <%= form.label :subdomain, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :subdomain, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "subdomain" %>
        <p class="mt-1 text-sm text-gray-500">This will be your organization's URL: <strong>subdomain</strong>.creatia.local</p>
      </div>

      <div class="mb-6">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Brief description of your organization" %>
      </div>

      <div class="mb-6">
        <%= form.label :plan, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :plan, options_for_select([['Free', 'free'], ['Team', 'team'], ['Enterprise', 'enterprise']], @organization.plan || 'free'), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", web_organizations_path, class: "px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300" %>
        <%= form.submit "Create Organization", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      </div>
    </div>
  <% end %>
</div>