<%# New Milestone Form %>
<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header Component -->
    <%= render Shared::PageHeaderComponent.new(
      title: "Create New Milestone",
      description: "Define a major goal or deliverable for your organization",
      back_link: milestones_path,
      back_text: "Back to Milestones",
      actions: []
    ) %>
    
    <div class="bg-white shadow-lg rounded-lg">
      <%= form_with model: @milestone, url: milestones_path, local: true, 
          data: { controller: "milestone-form" } do |form| %>
        
        <!-- Basic Information Section -->
        <%= render Shared::FormSectionComponent.new(
          title: "Basic Information",
          description: "Define the milestone details and type",
          columns: 1
        ) do %>
          <div>
            <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                placeholder: "e.g., Beta Launch, Version 2.0 Release" %>
            <% if @milestone.errors[:title].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @milestone.errors[:title].first %></p>
            <% end %>
          </div>
          
          <div>
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                rows: 4,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Describe the milestone goals, success criteria, and key deliverables..." %>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :milestone_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :milestone_type, 
                  options_for_select([
                    ['Release', 'release'],
                    ['Project', 'project'],
                    ['Epic', 'epic'],
                    ['Quarterly Goal', 'quarterly']
                  ], @milestone.milestone_type),
                  {},
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            
            <div>
              <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.select :status, 
                  options_for_select([
                    ['Planning', 'planning'],
                    ['Active', 'active'],
                    ['On Hold', 'on_hold'],
                    ['Completed', 'completed'],
                    ['Cancelled', 'cancelled']
                  ], @milestone.status),
                  {},
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
        <% end %>
        
        <!-- Timeline Section -->
        <%= render Shared::FormSectionComponent.new(
          title: "Timeline",
          description: "Set the milestone schedule",
          columns: 2
        ) do %>
          <div>
            <%= form.label :planned_start, "Planned Start Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :planned_start, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <%= form.label :planned_end, "Planned End Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :planned_end, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        <% end %>
        
        <!-- Objectives Section -->
        <%= render Shared::FormSectionComponent.new(
          title: "Objectives",
          description: "Define specific objectives for this milestone",
          columns: 1,
          border_bottom: false
        ) do %>
          <div data-milestone-form-target="objectives" class="space-y-3">
            <div class="objective-item grid grid-cols-1 md:grid-cols-2 gap-3">
              <%= text_field_tag "milestone[objectives][][title]", "", 
                  placeholder: "Objective title",
                  class: "px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
              <%= text_area_tag "milestone[objectives][][description]", "", 
                  placeholder: "Objective description",
                  rows: 2,
                  class: "px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
          
          <%= render Ui::ButtonComponent.new(
            variant: :secondary,
            size: :small,
            tag: :button,
            type: :button,
            data: { action: "milestone-form#addObjective" }
          ) do %>
            + Add Another Objective
          <% end %>
        <% end %>
        
        <!-- Form Actions -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
          <%= render Ui::ButtonComponent.new(
            variant: :secondary,
            size: :default,
            tag: :a,
            href: milestones_path
          ) do %>
            Cancel
          <% end %>
          
          <%= render Ui::ButtonComponent.new(
            variant: :primary,
            size: :default,
            tag: :button,
            type: :submit
          ) do %>
            Create Milestone
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>