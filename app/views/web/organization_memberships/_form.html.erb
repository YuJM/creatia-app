<%= form_with(model: membership, url: membership.persisted? ? member_path(membership) : members_path, local: false, id: "membership_form") do |form| %>
  <% if membership.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= icon "x-circle", variant: "fill", class: "h-5 w-5 text-red-400" %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">오류가 발생했습니다</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% membership.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% unless membership.persisted? %>
    <div class="mb-4">
      <%= label_tag :email, "이메일", class: "block text-sm font-medium text-gray-700" %>
      <%= text_field_tag :email, nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "user@example.com" %>
      <p class="mt-1 text-sm text-gray-500">초대할 사용자의 이메일 주소를 입력하세요.</p>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :role, "역할", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :role, options_for_select(OrganizationMembership::ROLES.map { |r| [r.humanize, r] }, membership.role), {}, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        disabled: membership.owner? %>
    <% if membership.owner? %>
      <p class="mt-1 text-sm text-gray-500">소유자 역할은 변경할 수 없습니다.</p>
    <% end %>
  </div>

  <div class="mb-4">
    <div class="flex items-center">
      <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= form.label :active, "활성 상태", class: "ml-2 block text-sm text-gray-900" %>
    </div>
    <p class="mt-1 text-sm text-gray-500">비활성화된 멤버는 조직에 접근할 수 없습니다.</p>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "취소", members_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit membership.persisted? ? "업데이트" : "초대하기", 
        class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>