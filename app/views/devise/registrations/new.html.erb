
<div class="min-h-screen flex items-center justify-center bg-background px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo and Title -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-r from-primary to-accent rounded-xl flex items-center justify-center shadow-lg transform -rotate-3 hover:-rotate-6 transition-transform">
        <span class="text-white text-2xl font-bold">C</span>
      </div>
      <h2 class="mt-6 text-display-xl text-foreground font-bold tracking-tight">
        Create your account
      </h2>
      <p class="mt-2 text-base text-muted-foreground">
        Join Creatia and start managing projects
      </p>
    </div>

    <!-- Registration Form Card -->
    <%= render Ui::CardComponent.new(variant: :elevated, padding: :lg, class: "animate-fade-in") do %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        
        <% if resource.errors.any? %>
          <div class="p-4 bg-destructive/10 border border-destructive/20 rounded-lg">
            <div class="flex">
              <svg class="w-5 h-5 text-destructive mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
              <div>
                <h3 class="text-sm font-medium text-destructive">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-destructive/90 space-y-1">
                  <% resource.errors.full_messages.each do |message| %>
                    <li>• <%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Name Field -->
        <div>
          <%= f.label :name, "Full Name", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= f.text_field :name, 
                autofocus: true, 
                autocomplete: "name",
                placeholder: "John Doe",
                class: "input w-full pl-10" %>
          </div>
        </div>

        <!-- Email Field -->
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <%= f.email_field :email, 
                autocomplete: "email",
                placeholder: "your@email.com",
                class: "input w-full pl-10" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-muted-foreground mb-2" do %>
            Password
            <% if @minimum_password_length %>
              <span class="text-xs text-muted-foreground font-normal">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, 
                autocomplete: "new-password",
                placeholder: "••••••••",
                class: "input w-full pl-10" %>
          </div>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                placeholder: "••••••••",
                class: "input w-full pl-10" %>
          </div>
        </div>

        <!-- Terms and Conditions -->
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <input type="checkbox" required class="h-4 w-4 text-primary focus:ring-ring border-input rounded">
          </div>
          <div class="ml-3 text-sm">
            <label class="text-muted-foreground">
              I agree to the 
              <%= link_to "Terms and Conditions", "#", class: "font-medium text-primary hover:text-primary/80 transition-colors" %> and 
              <%= link_to "Privacy Policy", "#", class: "font-medium text-primary hover:text-primary/80 transition-colors" %>
            </label>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= render Ui::ButtonComponent.new(
                variant: :default,
                size: :lg,
                full_width: true,
                type: "submit"
              ) do %>
            Create Account
          <% end %>
        </div>
      <% end %>
    <% end %>

    <!-- Sign In Link -->
    <div class="text-center">
      <span class="text-sm text-muted-foreground">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-primary hover:text-primary/80 transition-colors" %>
      </span>
    </div>
  </div>
</div>
