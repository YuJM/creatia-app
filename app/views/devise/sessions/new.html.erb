<div class="min-h-screen flex items-center justify-center bg-background px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo and Title -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-r from-primary to-accent rounded-xl flex items-center justify-center shadow-lg transform rotate-3 hover:rotate-6 transition-transform">
        <span class="text-white text-2xl font-bold">C</span>
      </div>
      <h2 class="mt-6 text-display-xl text-foreground font-bold tracking-tight">
        Welcome to Creatia
      </h2>
      <p class="mt-2 text-base text-muted-foreground">
        Multi-tenant project management platform
      </p>
    </div>

    <!-- Login Form Card -->
    <%= render Ui::CardComponent.new(variant: :elevated, padding: :lg, class: "animate-fade-in") do %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        
        <!-- Email Field -->
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "your@email.com",
                class: "input w-full pl-10" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, 
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "input w-full pl-10" %>
          </div>
        </div>

        <!-- Remember Me and Forgot Password -->
        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-primary focus:ring-ring border-input rounded" %>
              <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-muted-foreground" %>
            </div>
          <% end %>
          
          <% if devise_mapping.recoverable? %>
            <div class="text-sm">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-primary hover:text-primary/80 transition-colors" %>
            </div>
          <% end %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= render Ui::ButtonComponent.new(
                variant: :default,
                size: :lg,
                full_width: true,
                type: "submit"
              ) do %>
            Sign In
          <% end %>
        </div>
      <% end %>
    <% end %>

      <!-- OAuth Login Options -->
      <% if devise_mapping.omniauthable? %>
        <div class="mt-6">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-border"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-card text-muted-foreground">Or continue with</span>
            </div>
          </div>

          <% if false # OAuth는 auth 서브도메인에서만 작동 %>
          <div class="mt-6 grid grid-cols-2 gap-3">
            <% resource_class.omniauth_providers.each do |provider| %>
              <%= button_to "#", 
                  method: :post, 
                  data: { turbo: false },
                  class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                <% if provider == :github %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="ml-2">GitHub</span>
                <% elsif provider == :google_oauth2 %>
                  <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                  </svg>
                  <span class="ml-2">Google</span>
                <% else %>
                  <%= provider.to_s.titleize %>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <% end %>
        </div>
      <% end %>

      <!-- Sign Up Link -->
      <% if devise_mapping.registerable? %>
        <div class="mt-6 text-center">
          <span class="text-sm text-muted-foreground">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-primary hover:text-primary/80 transition-colors" %>
          </span>
        </div>
      <% end %>

    <!-- Demo Account Info -->
    <%= render Ui::CardComponent.new(variant: :outlined, class: "bg-primary/5 border-primary/20") do %>
      <div class="p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-primary">Demo Account</h3>
            <div class="mt-2 text-sm text-primary/80 space-y-1">
              <p><span class="font-medium">Email:</span> admin@creatia.local</p>
              <p><span class="font-medium">Password:</span> password123</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>