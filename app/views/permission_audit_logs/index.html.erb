<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">권한 감사 로그</h1>
      <p class="mt-2 text-sm text-gray-700">
        조직 내 모든 권한 체크 및 접근 시도를 추적합니다.
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to export_organization_permission_audit_logs_path(@organization, format: :csv, start_date: 30.days.ago, end_date: Date.current),
                  class: "inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        CSV 내보내기
      <% end %>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-5">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">총 권한 체크</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:total_checks]) %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">허용됨</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= number_with_delimiter(@stats[:permitted_count]) %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">거부됨</dt>
        <dd class="mt-1 text-3xl font-semibold text-red-600"><%= number_with_delimiter(@stats[:denied_count]) %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">활성 사용자</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:unique_users] %></dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">오늘</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= @stats[:today_count] %></dd>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="mt-8 bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: organization_permission_audit_logs_path(@organization), method: :get, local: true, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-6">
          <div class="sm:col-span-2">
            <%= f.label :user_id, "사용자", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :user_id,
                         options_for_select(
                           @organization.users.pluck(:email, :id),
                           params[:user_id]
                         ),
                         { include_blank: "전체" },
                         class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :action, "작업", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :action,
                         options_for_select(
                           %w[read create update delete manage].map { |a| [a.capitalize, a] },
                           params[:action]
                         ),
                         { include_blank: "전체" },
                         class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :permitted, "결과", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :permitted,
                         options_for_select(
                           [["허용됨", "true"], ["거부됨", "false"]],
                           params[:permitted]
                         ),
                         { include_blank: "전체" },
                         class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :date_from, "시작일", class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :date_from,
                             value: params[:date_from],
                             class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= f.label :date_to, "종료일", class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :date_to,
                             value: params[:date_to],
                             class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>
        
        <div class="flex justify-end space-x-3">
          <%= link_to "초기화",
                      organization_permission_audit_logs_path(@organization),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= f.submit "필터 적용",
                       class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Audit Logs Table -->
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">시간</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">사용자</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">작업</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">리소스</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">결과</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">상세</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @audit_logs.each do |log| %>
                <tr class="hover:bg-gray-50">
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= log.created_at.strftime('%m/%d %H:%M:%S') %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= log.user&.email || 'System' %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= action_badge_color(log.action) %>">
                      <%= log.action %>
                    </span>
                  </td>
                  <td class="px-3 py-4 text-sm text-gray-500">
                    <div class="flex items-center">
                      <span class="font-medium"><%= log.resource_type %></span>
                      <% if log.resource %>
                        <span class="ml-2 text-gray-400">#<%= log.resource_id %></span>
                      <% end %>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <% if log.permitted? %>
                      <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        허용
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                        <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        거부
                      </span>
                    <% end %>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <%= link_to "상세",
                                organization_permission_audit_log_path(@organization, log),
                                class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <% if @audit_logs.respond_to?(:current_page) %>
    <div class="mt-4 flex justify-center">
      <%= paginate @audit_logs %>
    </div>
  <% end %>
</div>

