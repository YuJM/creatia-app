<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Organizations</h1>
    <% if policy(Organization).create? %>
      <%= link_to "New Organization", new_organization_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @organizations.each do |org| %>
      <%= render OrganizationCardComponent.new(
        organization: org,
        action_path: switch_organization_path(org),
        action_method: :post
      ) %>
    <% end %>
    
    <% if @organizations.empty? %>
      <div class="col-span-full">
        <%= render AlertComponent.new(type: :info) do %>
          <div class="text-center py-8">
            <p class="mb-4">No organizations found.</p>
            <%= link_to "Create your first organization", new_organization_path, 
                class: "bg-green-500 text-white px-6 py-3 rounded hover:bg-green-600" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>