<div class="<%= section_classes %>">
  <% if title.present? %>
    <h2 class="text-lg font-semibold text-gray-900 mb-4"><%= title %></h2>
  <% end %>
  
  <% if description.present? %>
    <p class="text-sm text-gray-600 mb-4"><%= description %></p>
  <% end %>
  
  <div class="<%= grid_classes %>">
    <%= content %>
  </div>
</div>