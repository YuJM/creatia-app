<div class="mb-8">
  <% if back_link.present? %>
    <%= link_to back_link, 
                class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700 mb-4" do %>
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <%= back_text %>
    <% end %>
  <% end %>
  
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= title %></h1>
      <% if description.present? %>
        <p class="mt-2 text-gray-600"><%= description %></p>
      <% end %>
    </div>
    
    <% if actions.any? %>
      <div class="flex gap-3">
        <% actions.each do |action| %>
          <%= render Ui::ButtonComponent.new(
            variant: action[:variant] || :default,
            size: action[:size] || :default,
            icon: action[:icon],
            **action[:options] || {}
          ) do %>
            <%= action[:text] %>
          <% end if action[:component_type] == :button %>
          
          <% if action[:component_type] == :link %>
            <%= link_to action[:url], 
                        class: action[:class] || "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700",
                        **action[:options] || {} do %>
              <% if action[:icon].present? %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= action[:icon_path] %>"/>
                </svg>
              <% end %>
              <%= action[:text] %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>