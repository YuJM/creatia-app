<div class="min-h-screen flex items-center justify-center bg-background px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo and Title -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-r from-primary to-accent rounded-xl flex items-center justify-center shadow-lg transform rotate-3 hover:rotate-6 transition-transform">
        <span class="text-white text-2xl font-bold">C</span>
      </div>
      <h2 class="mt-6 text-display-xl text-foreground font-bold tracking-tight">
        Reset your password
      </h2>
      <p class="mt-2 text-base text-muted-foreground">
        Enter your email to receive reset instructions
      </p>
    </div>

    <!-- Password Reset Form Card -->
    <%= render Ui::CardComponent.new(variant: :elevated, padding: :lg, class: "animate-fade-in") do %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        
        <% if resource.errors.any? %>
          <%= render AlertComponent.new(variant: :danger) do %>
            <h3 class="font-medium">Please fix the following errors:</h3>
            <ul class="mt-2 space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li>â€¢ <%= message %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>

        <!-- Email Field -->
        <%= render Ui::InputComponent.new(
              type: 'email',
              label: 'Email Address',
              name: "#{resource_name}[email]",
              id: "#{resource_name}_email",
              placeholder: 'your@email.com',
              required: true,
              prefix: :email,
              value: resource.email,
              help_text: 'We will send password reset instructions to this email address.'
            ) %>

        <!-- Submit Button -->
        <div>
          <%= render Ui::ButtonComponent.new(
                variant: :default,
                size: :lg,
                full_width: true,
                type: "submit",
                icon: :email
              ) do %>
            Send Reset Instructions
          <% end %>
        </div>
      <% end %>
    <% end %>

    <!-- Links -->
    <div class="text-center space-y-3">
      <div>
        <span class="text-sm text-muted-foreground">
          Remember your password?
          <%= link_to "Sign in", new_session_path(resource_name), 
              class: "font-medium text-primary hover:text-primary/80 transition-colors" %>
        </span>
      </div>
      
      <% if devise_mapping.registerable? %>
        <div>
          <span class="text-sm text-muted-foreground">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name), 
                class: "font-medium text-primary hover:text-primary/80 transition-colors" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>