<div class="<%= container_classes %>" role="alert">
  <div class="flex">
    <% if show_icon? %>
      <div class="<%= icon_classes %>">
        <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>"></path>
        </svg>
      </div>
    <% end %>
    
    <div class="<%= show_icon? ? 'ml-3' : '' %> flex-1 min-w-0">
      <% if title.present? %>
        <h3 class="<%= title_classes %>">
          <%= title %>
        </h3>
      <% end %>
      
      <div class="<%= title.present? ? content_classes : '' %>">
        <%= content %>
      </div>
    </div>
    
    <% if dismissable %>
      <div class="ml-auto pl-3">
        <button
          type="button"
          class="<%= dismiss_button_classes %>"
          data-action="click->alert#dismiss"
          aria-label="Dismiss alert"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    <% end %>
  </div>
</div>