<div class="space-y-4" data-controller="permission-selector">
  <% grouped_permissions.each do |resource, resource_permissions| %>
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
      <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= icon resource_icon(resource), class: "h-5 w-5 text-gray-500 mr-2" %>
            <h4 class="text-sm font-medium text-gray-900">
              <%= resource %>
            </h4>
          </div>
          
          <button type="button"
                  data-action="click->permission-selector#toggleResource"
                  data-resource="<%= resource %>"
                  class="text-xs text-indigo-600 hover:text-indigo-900 font-medium">
            전체 선택
          </button>
        </div>
      </div>
      
      <div class="px-4 py-3">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
          <% resource_permissions.each do |permission| %>
            <label class="flex items-center">
              <input type="checkbox"
                     name="permission_ids[]"
                     value="<%= permission.id %>"
                     data-resource="<%= resource %>"
                     data-action="<%= permission.action %>"
                     data-permission-selector-target="checkbox"
                     <%= 'checked' if permission_checked?(permission) %>
                     class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
              <span class="ml-2">
                <span class="<%= action_badge_color(permission.action) %> px-2 py-1 text-xs font-medium rounded">
                  <%= permission.action %>
                </span>
              </span>
            </label>
            
            <% if permission.action == 'update' && role.editable? %>
              <div class="ml-6 text-xs text-gray-500">
                <label class="flex items-center">
                  <input type="checkbox"
                         name="permission_conditions[<%= permission.id %>][own_only]"
                         value="true"
                         class="h-3 w-3 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                  <span class="ml-1">자신의 것만</span>
                </label>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="text-sm font-medium text-blue-900 mb-2">빠른 설정</h4>
    <div class="flex flex-wrap gap-2">
      <button type="button"
              data-action="click->permission-selector#selectPreset"
              data-preset="viewer"
              class="px-3 py-1 text-xs font-medium rounded-md bg-white text-gray-700 hover:bg-gray-50 border border-gray-300">
        Viewer 권한
      </button>
      <button type="button"
              data-action="click->permission-selector#selectPreset"
              data-preset="member"
              class="px-3 py-1 text-xs font-medium rounded-md bg-white text-gray-700 hover:bg-gray-50 border border-gray-300">
        Member 권한
      </button>
      <button type="button"
              data-action="click->permission-selector#selectPreset"
              data-preset="admin"
              class="px-3 py-1 text-xs font-medium rounded-md bg-white text-gray-700 hover:bg-gray-50 border border-gray-300">
        Admin 권한
      </button>
      <button type="button"
              data-action="click->permission-selector#clearAll"
              class="px-3 py-1 text-xs font-medium rounded-md bg-white text-red-700 hover:bg-red-50 border border-red-300">
        모두 해제
      </button>
    </div>
  </div>
</div>